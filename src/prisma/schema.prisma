generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id       Int       @id
  name     String    @unique
  slug     String    @unique
  location String?
  country  String
  parkings Parking[]
}

model Parking {
  id            String  @id @default(uuid())
  name          String  @unique
  location      String?
  numberOfSpots Int
  opened        Boolean @default(true)
  hourlyRate    Int
  city          City    @relation(fields: [cityId], references: [id])
  cityId        Int
  spots         Spot[]
}

model Park {
  id                 String    @id @default(uuid())
  startedAt          DateTime
  endedAt            DateTime?
  vehicleNumberPlate String
  spot               Spot      @relation(fields: [spotId], references: [id])
  spotId             String
}

model Spot {
  id        String  @id @default(uuid())
  parking   Parking @relation(fields: [parkingId], references: [id])
  parkingId String
  parks     Park[]
}
