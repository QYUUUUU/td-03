generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id       String    @id @default(uuid()) // Changed to UUID
  name     String    @unique
  slug     Int       @unique
  location String?
  country  String
  parkings Parking[]
}

model Parking {
  id             String  @id @default(uuid()) // Changed to UUID
  name           String  @unique
  location       String?
  numberOfPlaces Int
  opened         Boolean @default(true)
  hourlyRate     Int
  city           City    @relation(fields: [cityId], references: [id])
  cityId         String // Updated to match City's UUID
  spots          Spot[]
}

model Park {
  id                 String    @id @default(uuid()) // Changed to UUID
  startedAt          DateTime
  endedAt            DateTime?
  vehicleNumberPlate String
  spot               Spot      @relation(fields: [spotId], references: [id])
  spotId             String // Updated to match Spot's UUID
}

model Spot {
  id        String  @id @default(uuid()) // Changed to UUID
  parking   Parking @relation(fields: [parkingId], references: [id])
  parkingId String // Updated to match Parking's UUID
  parks     Park[]
}
